<% if customer_signed_in? && @customer == current_customer %>
  <% unless @customer.email == "test@test.com" then %>
    <div class="mt-3">
      <%= link_to "退会する", public_customer_path(current_customer.id), class: "destroy-customer btn-gradient-flat-customer-destroy", method: :delete, "data-confirm" => "本当に退会しますか？" %>
    </div>
  <% end %>
<% end %>
<div class="container">
  <header class="row">
    <div class="profile_image">
      <% if @customer.profile_image.attached? %>
        <%= image_tag @customer.profile_image, class: "rounded-circle", size: "150x150" %>
      <% else %>
        <%= image_tag asset_path('no_image.jpg'), class: "rounded-circle", size: "150x150" %>
      <% end %>
    </div>
    <div>
      <div>
        <% if @customer.name != "GUEST" %>
          <% if @customer == current_customer %>
            <p><%= link_to "プロフィール編集", edit_public_customer_path(@customer) %></p>
          <% end %>
        <% end %>
      </div>

      <div class="">
        <%= link_to "フォロワー", public_customer_followers_path(@customer.id) %><%= @customer.followers.count %>
        <%= link_to "フォロー", public_customer_followings_path(@customer.id) %><%= @customer.followings.count %>
      </div>

      <div>
        <% if customer_signed_in? && current_customer != @customer %>
          <% if current_customer.following?(@customer) %>
            <%= link_to "フォロー外す", public_customer_relationships_path(@customer.id), method: :delete %>
          <% else %>
            <%= link_to "フォローする", public_customer_relationships_path(@customer.id), method: :post %>
          <% end %>
        <% end %>
      </div>

      <div>
        <p style="font-weight: bolder;"><%= @customer.name %></p>
        <p><%= @customer.body %></p>
      </div>

      <div>
        <% if @customer != current_customer %>
          <p><%= link_to "お気に入り記事", favorites_public_customer_path(@customer) %></p>
        <% end %>
      </div>
    </div>
  </header>
    <div class="row">
      <div class="album photo">
        <% @customer.posts.each do |customer_post| %>
          <% if customer_post.image.attached? %>
            <%= link_to public_post_path(customer_post) do %>
              <%= image_tag customer_post.image, size: "200x200" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>