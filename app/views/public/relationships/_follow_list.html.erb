<% if customers.exists? %>
  <% customers.each do |customer| %>
    <tbody>
      <tr>
        <td>
            <% if customer.profile_image.attached? %>
              <%= image_tag customer.profile_image, size: "50x50" %>
            <% else %>
              <%= image_tag asset_path('no_image.jpg'), size: "50x50" %>
            <% end %>
            <%= link_to customer.name, public_customer_path(customer.id) %>
        </td>
        <td>
          <% if current_customer != customer %>
            <% if current_customer.following?(customer) %>
              <%= link_to "フォロー外す", public_customer_relationships_path(customer.id), method: :delete %>
            <% else %>
              <%= link_to "フォローする", public_customer_relationships_path(customer.id), method: :post %>
            <% end %>
          <% end %>
        </td>
      </tr>
    </tbody>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>