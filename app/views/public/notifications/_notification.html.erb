<% visiter = notification.visiter %>
<% post = notification.post %>

<div class="customer-view clearfix ">
  <% if visiter.profile_image.attached? %>
    <%= link_to public_customer_path(notification.visiter) do %>
      <%= image_tag visiter.profile_image, size: "50x50" %>
    <% end %>
  <% else %>
    <%= link_to public_customer_path(notification.visiter) do %>
      <%= image_tag asset_path('no_image.jpg'), size: "50x50" %>
    <% end %>
  <% end %>
  <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
  <br>
  <% if !@comment.nil? %>
    <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
  <% end %>
</div>