<% post.comments.each do |comment| %>
  <div>
    <% if comment.customer.profile_image.attached? %>
      <%= link_to public_customer_path(comment.customer.id) do %>
        <%= image_tag comment.customer.profile_image, class: "rounded-circle", size: '50x50' %>
      <% end %>
    <% else %>
      <%= link_to public_customer_path(comment.customer.id) do %>
        <%= image_tag asset_path('no_image.jpg'), class: "rounded-circle", size: "50x50" %>
      <% end %>
    <% end %>
    <span class="name-space"><%= link_to comment.customer.name, public_customer_path(comment.customer.id), class: "font" %></span>
    <span class="name-space"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
    <% if comment.customer == current_customer %>
      <span class="name-space"><%= link_to "コメント削除", public_post_comment_path(post.id, comment.id), method: :delete, remote: true, class: "btn btn-danger" %></span>
    <% end %>
  </div>

  <%= comment.comment %>

<% end %>
